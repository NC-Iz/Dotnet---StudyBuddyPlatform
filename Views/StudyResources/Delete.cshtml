@model StudyBuddyPlatform.Models.StudyResource

@{
    ViewData["Title"] = "Delete Study Resource";
}

<div class="container">
    <h1 class="my-4">Delete Study Resource</h1>

    <h3>Are you sure you want to delete this resource?</h3>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
            <p class="card-text">@Html.DisplayFor(model => model.Description)</p>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Subject)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ResourceType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ResourceType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FileName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FileName)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>