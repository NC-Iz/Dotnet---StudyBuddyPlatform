@model StudyBuddyPlatform.Models.StudyGroupViewModel

@{
    ViewData["Title"] = "Edit Study Group";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-edit me-3"></i>Edit Study Group</h1>
        <p>Update your group information</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card slide-up">
                <div class="card-header">
                    <h3><i class="fas fa-users me-2"></i>Group Details</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Group Name
                                </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Subject" class="form-label">
                                    <i class="fas fa-graduation-cap me-2"></i>Subject
                                </label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxMembers" class="form-label">
                                    <i class="fas fa-users me-2"></i>Maximum Members
                                </label>
                                <input asp-for="MaxMembers" class="form-control" type="number" min="2" max="50" />
                                <span asp-validation-for="MaxMembers" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    <i class="fas fa-eye me-2"></i>Group Visibility
                                </label>
                                <div class="form-check">
                                    <input asp-for="IsPublic" class="form-check-input" type="radio" value="true" id="public" />
                                    <label class="form-check-label" for="public">
                                        <i class="fas fa-globe me-1"></i>Public
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="IsPublic" class="form-check-input" type="radio" value="false" id="private" />
                                    <label class="form-check-label" for="private">
                                        <i class="fas fa-lock me-1"></i>Private
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Group
                            </button>
                            <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Group
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}